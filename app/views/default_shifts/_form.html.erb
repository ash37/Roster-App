<%= form_for(@default_shift) do |f| %>
  <% if @default_shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@default_shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
        <% @default_shift.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :store_id %>
  <%= collection_select(:shift, :store_id, Store.all, :id, :name) %>

  <%= f.label :day %>
  <%= f.select :day, 0..6 %>

  <%= f.label :start_time %>
  <%= f.time_select :start_time, minute_step: 30, ampm: true %> 

  <%= f.label :finish_time %>
  <%= f.time_select :finish_time, minute_step: 30, ampm: true %>

  <%= f.label :break_time %>
  <%= f.time_select :break_time, minute_step: 30, ampm: true %>

  <%= f.label :duty %>
  <%= f.text_field :duty %>

  <%= f.label :notes %>
  <%= f.text_field :notes %>

  <%= f.submit class: "btn btn-primary"%>
<% end %>
