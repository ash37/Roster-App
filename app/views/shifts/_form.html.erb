<%= form_for(@shift) do |f| %>
  <% if @shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
      <% @shift.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :store_id %><br />
    <%= collection_select(:shift, :store_id, Store.all, :id, :name) %>
    
  </div>
  <div class="field">
    <%= f.label :day %><br />
    <%= f.select :day, 0..6 %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.time_select :start_time, minute_step: 30, ampm: true %> 
  </div>
  <div class="field">
    <%= f.label :finish_time %><br />
    <%= f.time_select :finish_time, minute_step: 30, ampm: true %>
  </div>
  <div class="field">
    <%= f.label :break_time %><br />
    <%= f.time_select :break_time, minute_step: 30, ampm: true %>
  </div>
  <div class="field">
    <%= f.label :shift_type %><br />
    <%= f.text_field :shift_type %>
  </div>
  <div class="field">
    <%= f.label :orders_to_place %><br />
    <%= f.text_field :orders_to_place %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
